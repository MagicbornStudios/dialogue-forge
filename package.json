{
  "name": "dialogue-forge-workspace",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:host": "pnpm --filter @magicborn/host run build",
    "build:lib": "pnpm --filter @magicborn/dialogue-forge run build",
    "dev": "pnpm --filter @magicborn/host run dev",
    "start": "pnpm --filter @magicborn/host run start",
    "payload:generate": "pnpm --filter @magicborn/host run payload:generate",
    "payload:migrate": "pnpm --filter @magicborn/host run payload:migrate",
    "payload:seed": "pnpm --filter @magicborn/host run payload:seed",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck:domains": "tsc -b --pretty false",
    "typecheck:host": "pnpm --filter @magicborn/host run typecheck",
    "prepublishOnly": "pnpm --filter @magicborn/dialogue-forge run build",
    "postinstall": "node scripts/patch-undici.js",
    "sync": "./sync-to-repo.sh",
    "arch:sync": "node scripts/sync-architecture-docs.js",
    "validate:workspace": "node scripts/workspace-validator.js",
    "deps:check": "dependency-cruiser --config dependency-cruiser.js packages apps",
    "deps:graph": "dependency-cruiser --config dependency-cruiser.js --output-type dot packages apps > docs/architecture/reports/deps/dependency-cruiser.dot",
    "arch:deps:svg": "node scripts/graphviz-dot-to-svg.js",
    "arch:report": "npm run deps:graph && npm run arch:deps:svg && node scripts/architecture-analyzer.js docs/architecture/reports/deps/dependency-cruiser.json",
    "check:arch": "npm run typecheck:domains && npm run typecheck:host && npm run deps:check && npm run validate:workspace",
    "vendor:opencode:install": "cd vendor/opencode && bun install",
    "vendor:opencode:dev": "cd vendor/opencode/packages/console/app && bun run dev",
    "vendor:opencode:build": "cd vendor/opencode/packages/console/app && bun run build",
    "vendor:opencode:sync": "node scripts/sync-opencode-ui.js",
    "vendor:opencode:update": "node scripts/update-opencode-submodule.js",
    "vendor:opencode:update-and-build": "npm run vendor:opencode:update && npm run vendor:opencode:build && npm run vendor:opencode:sync"
  },
  "pnpm": {
    "overrides": {
      "undici": "^6.19.8"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/ui": "^2.0.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.5.7",
    "madge": "^7.0.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
