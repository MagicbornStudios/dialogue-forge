{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@/shared/*": ["./src/shared/*"],
      "@/ai/*": ["./src/ai/*"],
      "@/forge/*": ["./src/forge/*"],
      "@/writer/*": ["./src/writer/*"],
      "@/host/*": ["./app/lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "app", "components", "styles", ".next"]
}

