{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "paths": {
      "@magicborn/theme": ["src"],
      "@magicborn/theme/*": ["src/*"],
      "@magicborn/shared": ["../shared/dist"],
      "@magicborn/shared/*": ["../shared/dist/*"]
    }
  },
  "references": [
    { "path": "../shared/tsconfig.json" }
  ],
  "include": ["src/**/*", "../../types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
