{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "paths": {
      "@magicborn/dialogue-forge": [
        "src"
      ],
      "@magicborn/dialogue-forge/*": [
        "src/*"
      ],
      "@magicborn/shared": [
        "../shared/src"
      ],
      "@magicborn/shared/*": [
        "../shared/src/*"
      ],
      "@magicborn/forge": [
        "../forge/src"
      ],
      "@magicborn/forge/*": [
        "../forge/src/*"
      ],
      "@magicborn/writer": [
        "../writer/src"
      ],
      "@magicborn/writer/*": [
        "../writer/src/*"
      ],
      "@magicborn/characters": [
        "../characters/src"
      ],
      "@magicborn/characters/*": [
        "../characters/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../shared/tsconfig.json"
    },
    {
      "path": "../forge/tsconfig.json"
    },
    {
      "path": "../writer/tsconfig.json"
    },
    {
      "path": "../characters/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
